<?xml version="1.0"?>
<robot name="barista_robot">



<!-- Coloring  -->
    <material name="red">
            <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
            <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <material name="black">
        <color rgba="0.0 0.0 0.0 1"/>
    </material>

    <!-- Base footprint -->
    <!-- <link name="base_footprint">
    </link>

    <joint name="base_link_base_footprint_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 -0.15"/>
        <parent link="base_link"/>
        <child link="base_footprint"/>
    </joint> -->

    <!-- Base link -->
    <link name="base_link">
        <collision>
            <geometry>
                <cylinder length="0.155" radius="0.178" />
            </geometry>
        </collision>
        
        <inertial>
            <origin xyz="0 0 0.0775"/>
            <mass value="5.0"/>
            <inertia ixx="0.1765" ixy="0" ixz="0" iyy="0.1765" iyz="0" izz="0.044"/>
         </inertial>
    
        <visual>
            <origin xyz="0 0 0.0775"/>
            <geometry>
                <cylinder length="0.155" radius="0.178"/> 
            </geometry>
            <material name="black"/>
        </visual>
    </link>


    <!-- Wheels link -->
    <link name="wheels">
        <inertial>
            <mass value="0.5"/> <!-- Assuming 0.5kg for each wheel for now -->
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0005"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
        </visual>
    </link>

    <!-- Left wheel -->
   <link name="left_wheel">
        <collision>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
            <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="-1.57079632 0 0" />
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0005"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="base_link_left_wheel_joint" type="continuous">
        <axis xyz="0 1 0" rpy="0 0 0" />
        <origin xyz="0 -0.15 0.0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="left_wheel" />
    </joint>


    <!-- right wheel -->
   <link name="right_wheel">
        <collision>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
            <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="-1.57079632 0 0" />
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0005"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="base_link_right_wheel_joint" type="continuous">
        <axis xyz="0 1 0" rpy="0 0 0" />
        <origin xyz="0 0.15 0.0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="right_wheel" />
    </joint>

    <!-- Laser Scanner place holder -->
    <link name="laser">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0045" ixy="0" ixz="0" iyy="0.0045" iyz="0" izz="0.00225"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.05"/> 
            </geometry>
        </visual>
    </link>

    <joint name="base_link_laser_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.155" />
        <parent link="base_link" />
        <child link="laser" />
    </joint>


  <!-- right standoff rod caster -->
   <link name="right_standoff">
        <collision>
            <origin xyz="0 0 0.110" rpy="0 0 0"/>
            <geometry>
                    <cylinder length="0.220" radius="0.01"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
                  <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0.110" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.220" radius="0.01"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_link_right_standoff_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.125 0.155" />
        <parent link="base_link" />
        <child link="right_standoff" />
    </joint>

    <!-- left standoff rod caster -->
   <link name="left_standoff">
        <collision>
            <origin xyz="0 0 0.110" rpy="0 0 0"/>
            <geometry>
                    <cylinder length="0.220" radius="0.01"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
                  <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0.110" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.220" radius="0.01"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_link_left_standoff_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 -0.125 0.155" />
        <parent link="base_link" />
        <child link="left_standoff" />
    </joint>

    <!-- cup holder link -->
    <link name="cup_holder">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.160"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0"/>
            <mass value="2.0"/>
            <inertia ixx="0.0512" ixy="0" ixz="0" iyy="0.0512" iyz="0" izz="0.0256"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.160"/> 
            </geometry>
            <material name="blue"/>
        </visual>
  </link>

    <joint name="base_link_cup_holder_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.42" />
        <parent link="base_link" />
        <child link="cup_holder" />
    </joint>


  <!-- Front caster -->
    <link name="front_caster">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0352"/>
            </geometry>
        </collision>
                
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00025" ixy="0.0" ixz="0.0" iyy="0.00025" iyz="0.0" izz="0.00025" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0352"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_link_front_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.125 0 0" />
        <parent link="base_link" />
        <child link="front_caster" />
    </joint>

    <!-- Rear caster -->
   <link name="rear_caster">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0352"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00025" ixy="0.0" ixz="0.0" iyy="0.00025" iyz="0.0" izz="0.00025" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0352"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_link_rear_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="-0.125 0 0" />
        <parent link="base_link" />
        <child link="rear_caster" />
    </joint>



    <!-- Gazebo Properties -->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    
    <gazebo reference="front_caster">
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
        <material>Gazebo/Gray</material>
    </gazebo>

    <gazebo reference="rear_caster">
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
        <material>Gazebo/Gray</material>
    </gazebo>

    <!-- Gazebo Plugins -->
    <!-- Robot differential driver -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>base_link_left_wheel_joint</leftJoint>
            <rightJoint>base_link_right_wheel_joint</rightJoint>
            <wheelSeparation>0.3</wheelSeparation>
            <wheelDiameter>0.0352</wheelDiameter>
            <torque>1000</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>

    <!-- Laser scan -->
    <gazebo reference="base_link_front_laser_joint">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <gazebo reference="laser">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

</robot>
